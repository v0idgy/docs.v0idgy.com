{% extends "base.jinja" %}

{% block title %}Docs You'll Actually Read{% endblock %}

{% block content %}
<section class="hero">
    <div class="hero-text">
        <p class="eyebrow">Docs-inspired</p>
        <h1>Docs You'll Actually Read</h1>
        <p class="lede">Next-gen docs that build reading habits into your workflow.</p>
        <div class="cta-row">
            <a class="button primary" href="{{ url('docs_root') }}">Start Learning </a>
        </div>
    </div>
    <div class="hero-visual">
        <img src="{{ static('img/laptop.png') }}" alt="Docs laptop preview" class="hero-laptop">
    </div>
</section>

<section class="support">
    <div class="support-card">
        <p class="small-label">Have a question or want to get involved?</p>
        <a class="button outline" href="https://discord.com" target="_blank" rel="noreferrer">Join our Discord</a>
    </div>
</section>

<section class="about">
    <div class="about-brand">
        <img src="{{ static('img/Main-logo.png') }}" alt="Docs logo" class="about-logo">
        <div>
            <p class="muted">Brought to you by</p>
            <h3>Gourav Yadav </h3>
            <p class="muted">An initiative focused on helping people learn programming through approachable docs.</p>
            <a class="link" href="http://v0idgy.link" target="_blank" rel="noreferrer">Learn about Gourav Yadav</a>
        </div>
    </div>
</section>
{% endblock %}
