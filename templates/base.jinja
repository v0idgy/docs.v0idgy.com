<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Docs{% endblock %}</title>
    <link rel="stylesheet" href="{{ static('css/main.css') }}">
</head>
<body>
    <header class="top-nav glass" data-nav="glass">
        <div class="nav-left">
            <a class="brand" href="{{ url('landing') }}">
                <img src="{{ static('img/logo.svg') }}" alt="Docs logo" class="brand-logo">
                <span class="brand-name">Docs</span>
            </a>
            <nav class="nav-links">
                <a class="nav-link {% if active_nav == 'home' %}active{% endif %}" href="{{ url('landing') }}">Home</a>
                <a class="nav-link {% if active_nav == 'docs' %}active{% endif %}" href="{{ url('docs_root') }}">Docs</a>
                <a class="nav-link {% if active_nav == 'tutorials' %}active{% endif %}" href="https://youtu.be" target="_blank" rel="noreferrer">Tutorials</a>
            </nav>
        </div>
        <div class="nav-right">
            <div class="search-shell">
                <input id="search-input" type="search" placeholder="Search" aria-label="Search docs">
                <div id="search-results" class="search-results"></div>
            </div>
            <button id="theme-toggle" class="icon-button" aria-label="Toggle theme" title="Toggle theme">
                <span class="icon-sun">â˜€</span>
                <span class="icon-moon">ðŸŒ™</span>
            </button>
        </div>
    </header>

    <main class="page-shell">
        {% block content %}{% endblock %}
    </main>

    <footer class="site-footer">
        <div class="footer-links">
            <a href="https://example.com/contribute" target="_blank" rel="noreferrer">Contribute</a>
            <a href="https://example.com/community" target="_blank" rel="noreferrer">Community</a>
            <a href="https://example.com/sponsor" target="_blank" rel="noreferrer">Sponsor</a>
        </div>
    </footer>

    {% include "partials/search_results.jinja" %}

    <script>
        window.SEARCH_INDEX = {{ search_data_json|default("[]")|safe }};
    </script>
    <script src="{{ static('js/theme.js') }}"></script>
    <script src="{{ static('js/search.js') }}"></script>
    <script src="{{ static('js/toc.js') }}"></script>
</body>
</html>
